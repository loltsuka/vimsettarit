set shiftwidth=4
set expandtab
set number
set autoindent
set tabstop=4
set nowritebackup
set noswapfile
set history=999
set ruler
set showcmd
set textwidth=79
set splitright
set splitbelow
set laststatus=2

nnoremap <C-J> <C-W><C-J>
nnoremap <C-K> <C-W><C-K>
nnoremap <C-L> <C-W><C-L>
nnoremap <C-H> <C-W><C-H>

nnoremap <Left> :echoe "Use h"<CR>
nnoremap <Right> :echoe "Use l"<CR>
nnoremap <Up> :echoe "Use k"<CR>
nnoremap <Down> :echoe "Use j"<CR>
